ifneq ($(MAKE_DEPTH),1)
    $(error This Makefile must not be run on its own!)
endif

ARNAME     := $(LIBNAME).a
SONAME     := $(LIBNAME).so
SONAME_X   := $(SONAME).$(VER_MJR)
SONAME_XX  := $(SONAME_X).$(VER_MNR)
SONAME_XXX := $(SONAME_XX).$(VER_INC)

SELF  := $(lastword $(MAKEFILE_LIST))
SRC   := $(wildcard *.c)
HDR   := $(wildcard *.h)
OBJ   := $(SRC:%.c=%.o)
DEP   := $(OBJ:%.o=%.d)
VER_H := version.h
STR_H := str_all.h

release debug: version $(ARNAME) $(SONAME_XXX)

$(ARNAME): $(OBJ) $(SELF)
	$(AR) $(ARNAME) $(OBJ)

$(SONAME_XXX): $(OBJ) $(SELF)
	$(CCSO) -Wl,-soname,$(SONAME) -o $(SONAME_XXX) $(OBJ)

%.o: %.c $(STR_H) $(SELF)
	$(CC) -c $(CFLAGS) $(CSFLAGS) -o $*.o $*.c

version:
	@echo "/* Generated file, do not edit! */" > $(VER_H) \
		&& echo "#ifndef VERSION_H_INCLUDED" >> $(VER_H) \
		&& echo "#define VERSION_H_INCLUDED" >> $(VER_H) \
		&& echo "#define UTLIB_VERSION_MAJOR     $($(PROJECT)_VER_MJR)" >> $(VER_H) \
		&& echo "#define UTLIB_VERSION_MINOR     $($(PROJECT)_VER_MNR)" >> $(VER_H) \
		&& echo "#define UTLIB_VERSION_INCREMENT $($(PROJECT)_VER_INC)" >> $(VER_H) \
		&& echo "#define UTLIB_VERSION_STRING    \"$($(PROJECT)_VERSION)\"" >> $(VER_H) \
		&& echo "#define UTLIB_VERSION_REVISION  \"$($(PROJECT)_REVISION)\"" >> $(VER_H) \
		&& echo "#define UTLIB_VERSION_LONG      \"$($(PROJECT)_VERSION)-$($(PROJECT)_REVISION)\"" >> $(VER_H) \
		&& echo "#endif" >> $(VER_H) \
		&& echo Generated $(VER_H)

$(STR_H): $(SELF)
	@echo "/* Header generated by ../$(notdir $(CURDIR))/$(SELF), do not edit! */" > $(STR_H)
	@echo "#ifndef STR_ALL_H_INCLUDED" >> $(STR_H)
	@echo "#define STR_ALL_H_INCLUDED" >> $(STR_H)
	@$(foreach H,$(wildcard str_*.h),echo "#include \"$(H)\"" >> $(STR_H);)
	@echo "#endif" >> $(STR_H)
	@echo Generated $(STR_H)

install:
	@$(MKDIR) $(INST_LIBDIR) \
		&& $(CPV) $(ARNAME) $(INST_LIBDIR) \
		&& $(CPV) $(SONAME_XXX) $(INST_LIBDIR) \
		&& $(LN) $(SONAME_XXX) $(INST_LIBDIR)/$(SONAME_X) \
		&& $(LN) $(SONAME_XXX) $(INST_LIBDIR)/$(SONAME)
	@$(MKDIR) $(INST_INCDIR) \
		&& $(CPV) $(HDR) $(INST_INCDIR)

uninstall:
	@$(foreach H,$(HDR),$(RMV) $(INST_INCDIR)/$(H) ||:;)
	@$(RMDIR) $(INST_INCDIR) ||:
	@$(RMV) $(INST_LIBDIR)/$(SONAME) $(INST_LIBDIR)/$(SONAME_X) \
		$(INST_LIBDIR)/$(SONAME_XXX) $(INST_LIBDIR)/$(ARNAME)
	@$(RMDIR) $(INST_LIBDIR) ||:

clean:
	$(RM) $(VER_H) $(STR_H) *.o *.d *.a *.so*

distclean: clean

-include $(DEP)

.PHONY: release debug version doc install uninstall clean distclean

## EOF
